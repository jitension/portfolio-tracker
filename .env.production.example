# =============================================================================
# Portfolio Tracker - PRODUCTION Environment (Synology NAS)
# =============================================================================
# Copy this file to .env on your NAS and fill in with actual values
# NEVER commit .env to Git - it should be in .gitignore
# =============================================================================

# =============================================================================
# Django Configuration
# =============================================================================
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here-change-this-50-chars-minimum

# Comma-separated list of allowed hostnames
ALLOWED_HOSTS=portfolio.jitension.synology.me,localhost,127.0.0.1

# CORS allowed origins (your frontend domain)
CORS_ALLOWED_ORIGINS=https://portfolio.jitension.synology.me

# =============================================================================
# Database Configuration (MongoDB)
# =============================================================================
MONGO_ROOT_USER=admin
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
MONGO_ROOT_PASSWORD=your-strong-mongodb-password-here

# =============================================================================
# Redis Configuration
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
REDIS_PASSWORD=your-strong-redis-password-here

# =============================================================================
# Security Keys
# =============================================================================
# Encryption key for sensitive data (Robinhood credentials, etc.)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here

# JWT secret key for token signing
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
JWT_SECRET_KEY=your-jwt-secret-key-here

# =============================================================================
# Security Settings (HTTPS Enforcement for Production)
# =============================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Strict
CSRF_COOKIE_SAMESITE=Strict
CSRF_TRUSTED_ORIGINS=https://portfolio.jitension.synology.me

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Portfolio Performance Tracker
APP_URL=https://portfolio.jitension.synology.me
APP_ENV=production

# =============================================================================
# Email Configuration (Optional - for notifications)
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=Portfolio Tracker <noreply@jitension.synology.me>

# =============================================================================
# Celery Configuration
# =============================================================================
CELERY_TASK_ALWAYS_EAGER=False
CELERY_TASK_EAGER_PROPAGATES=False

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO

# =============================================================================
# Data Retention (Days)
# =============================================================================
PORTFOLIO_HISTORY_RETENTION=365
TRANSACTION_HISTORY_RETENTION=730
LOG_RETENTION=90

# =============================================================================
# Rate Limiting
# =============================================================================
API_RATE_LIMIT=100/hour
LOGIN_RATE_LIMIT=5/minute

# =============================================================================
# Robinhood API Settings
# =============================================================================
ROBINHOOD_TIMEOUT=30
ROBINHOOD_MAX_RETRIES=3

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/volume1/backups/portfolio
