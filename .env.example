# =============================================================================
# Portfolio Tracker - Production Environment Configuration
# =============================================================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your values below
# 3. NEVER commit .env to Git (it's in .gitignore)
# =============================================================================

# =============================================================================
# Required: Change These Values!
# =============================================================================

# Django Secret Key (generate with: python -c "import secrets; print(secrets.token_urlsafe(50))")
DJANGO_SECRET_KEY=CHANGE-ME-generate-a-long-random-string-here

# Your domain (comma-separated if multiple)
ALLOWED_HOSTS=your-domain.synology.me,localhost

# CORS and CSRF (use https:// for production)
CORS_ALLOWED_ORIGINS=https://your-domain.synology.me
CSRF_TRUSTED_ORIGINS=https://your-domain.synology.me

# MongoDB Credentials (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE-ME-generate-strong-password

# Redis Password (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
REDIS_PASSWORD=CHANGE-ME-generate-strong-password

# Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=CHANGE-ME-generate-fernet-key

# JWT Secret (generate with: python -c "import secrets; print(secrets.token_urlsafe(50))")
JWT_SECRET_KEY=CHANGE-ME-generate-jwt-secret

# =============================================================================
# Security Settings (HTTPS - use True for production behind reverse proxy)
# =============================================================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax

# =============================================================================
# Optional: Advanced Settings (defaults are fine for most users)
# =============================================================================

# Debug mode (NEVER set to True in production!)
DEBUG=False

# Django settings module
DJANGO_SETTINGS_MODULE=config.settings.production
